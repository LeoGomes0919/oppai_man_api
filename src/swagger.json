{
  "openapi": "3.0.0",
  "info": {
    "title": "OppaiMan API",
    "description": "This is an API OppaiMan",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3333/api",
      "description": "Local server"
    }
  ],
  "paths": {
    "/accounts": {
      "post": {
        "tags": [
          "Account"
        ],
        "summary": "Create a new account",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Account"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          },
          "409": {
            "description": "User already exists"
          }
        }
      }
    },
    "/accounts/profile": {
      "get": {
        "tags": [
          "Account"
        ],
        "summary": "Get account profile",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/sessions": {
      "post": {
        "tags": [
          "Session"
        ],
        "summary": "Create a new session",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Session"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/sessions/refresh-token": {
      "post": {
        "tags": [
          "Session"
        ],
        "summary": "Refresh token",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "token": {
                    "type": "string"
                  }
                },
                "required": [
                  "token"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Account": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "password_confirmation": {
            "type": "string"
          },
          "role": {
            "type": "string",
            "enum": [
              "DEVELOPER",
              "CUSTOMER"
            ]
          }
        },
        "required": [
          "name",
          "email",
          "password",
          "password_confirmation",
          "role"
        ],
        "example": {
          "name": "OppaiMan",
          "email": "user@oppaiman.com",
          "password": "12345678",
          "password_confirmation": "12345678",
          "role": "CUSTOMER"
        }
      },
      "Session": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        },
        "required": [
          "email",
          "password"
        ]
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}